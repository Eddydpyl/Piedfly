<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/message_item">

    <RelativeLayout
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/flock_item_marginRight"
            android:src="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_icon_margin"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="@string/content_delete_caps"
            android:textColor="@color/white"
            android:textSize="@dimen/material_typography_body1" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/material_light_white">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/material_layout_app_bar_icon_padding"
            android:src="@drawable/ic_action_logo_dark" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textColor="@color/material_light_black"
            android:padding="@dimen/material_layout_app_bar_icon_padding"
            android:textSize="@dimen/material_typography_body1" />

    </LinearLayout>

</FrameLayout>

